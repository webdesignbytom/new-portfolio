generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

// USERS
enum Role {
  USER
  ADMIN
  DEVELOPER
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  password       String
  role           Role      @default(USER)
  createdEvents  Event[]   @relation("createdEvents")
  receivedEvents Event[]   @relation("receivedEvents")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt
}

// EVENTS
enum EventType {
  ERROR
  USER
  ADMIN
  VISITOR
}

model Event {
  id           Int       @id @default(autoincrement())
  type         EventType
  topic        String?
  content      String?
  createdBy    User?     @relation("createdEvents", fields: [createdById], references: [id], onDelete: Cascade)
  createdById  String?
  receivedBy   User?     @relation("receivedEvents", fields: [receivedById], references: [id], onDelete: Cascade)
  receivedById String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt
}
